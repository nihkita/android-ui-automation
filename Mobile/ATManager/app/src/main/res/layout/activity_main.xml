<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Facebook Email:"
        android:id="@+id/_textViewFacebookEmail"
        android:layout_alignBottom="@+id/_editTextFacebookEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/_editTextFacebookEmail"
        android:layout_gravity="bottom"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/_editTextFacebookPassword"
        android:layout_alignStart="@+id/_editTextFacebookPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Facebook Password:"
        android:id="@+id/_textViewFacebookPassword"
        android:layout_alignBottom="@+id/_editTextFacebookPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/_editTextFacebookPassword"
        android:layout_gravity="bottom"
        android:layout_below="@+id/_editTextFacebookEmail"
        android:layout_toRightOf="@+id/_textViewFacebookPassword"
        android:layout_toEndOf="@+id/_textViewFacebookPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Minimum Points:"
        android:id="@+id/_textViewMinimumPoints"
        android:layout_alignBottom="@+id/_editTextMinimumPoints"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/_editTextMinimumPoints"
        android:layout_below="@+id/_editTextFacebookPassword"
        android:layout_alignLeft="@+id/_editTextFacebookPassword"
        android:layout_alignStart="@+id/_editTextFacebookPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Maximum Points:"
        android:id="@+id/_textViewMaximumPoints"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/_editTextMinimumPoints"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/_editTextMaximumPoints"
        android:layout_alignBottom="@+id/_textViewMaximumPoints"
        android:layout_alignRight="@+id/_editTextFacebookPassword"
        android:layout_alignEnd="@+id/_editTextFacebookPassword"
        android:layout_toRightOf="@+id/_textViewFacebookPassword"
        android:layout_toEndOf="@+id/_textViewFacebookPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Starting Hour:"
        android:id="@+id/_textViewStartingHour"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/_textViewMaximumPoints"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/_editTextStartingHour"
        android:layout_alignBottom="@+id/_textViewStartingHour"
        android:layout_alignRight="@+id/_editTextMaximumPoints"
        android:layout_alignEnd="@+id/_editTextMaximumPoints"
        android:layout_alignLeft="@+id/_editTextMaximumPoints"
        android:layout_alignStart="@+id/_editTextMaximumPoints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ending Hour:"
        android:id="@+id/_textViewEndingHour"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/_textViewStartingHour"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/_editTextEndingHour"
        android:layout_alignBottom="@+id/_textViewEndingHour"
        android:layout_alignRight="@+id/_editTextStartingHour"
        android:layout_alignEnd="@+id/_editTextStartingHour"
        android:layout_alignLeft="@+id/_editTextStartingHour"
        android:layout_alignStart="@+id/_editTextStartingHour" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/_buttonStart"
        android:enabled="true"
        android:onClick="start"
        android:layout_below="@+id/_editTextEndingHour"
        android:layout_alignRight="@+id/_editTextEndingHour"
        android:layout_alignEnd="@+id/_editTextEndingHour"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
