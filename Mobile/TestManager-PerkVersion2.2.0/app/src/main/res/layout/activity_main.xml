<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Perk Email:"
        android:id="@+id/_textViewPerkEmail"
        android:layout_above="@+id/_editTextPerkPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/_editTextPerkEmail"
        android:layout_gravity="bottom"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/_editTextPerkPassword"
        android:layout_alignStart="@+id/_editTextPerkPassword"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Perk Password:"
        android:id="@+id/_textViewPerkPassword"
        android:layout_alignBottom="@+id/_editTextPerkPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/_editTextPerkPassword"
        android:layout_gravity="bottom"
        android:layout_below="@+id/_editTextPerkEmail"
        android:layout_toRightOf="@+id/_textViewPerkPassword"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Starting Hour:"
        android:id="@+id/_textViewStartingHour"
        android:layout_alignBottom="@+id/_editTextStartingHour"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/_editTextStartingHour"
        android:layout_below="@+id/_textViewPerkPassword"
        android:layout_toRightOf="@+id/_textViewPerkPassword"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ending Hour:"
        android:id="@+id/_textViewEndingHour"
        android:layout_alignBottom="@+id/_editTextEndingHour"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/_editTextEndingHour"
        android:layout_below="@+id/_editTextStartingHour"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/_editTextStartingHour"
        android:layout_alignStart="@+id/_editTextStartingHour" />

    <CheckBox
        android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/_checkBoxRateVideos"
        android:text="Rate Videos:        "
        android:button="@null"
        android:clickable="true"
        android:checked="false"
        android:layout_below="@+id/_textViewEndingHour"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/_buttonStart"
        android:onClick="start"
        android:enabled="true"
        android:clickable="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/_checkBoxRateVideos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
